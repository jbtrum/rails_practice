<div class="container my-4">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card">
          <img src="<%= item.image.url if item.image? %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <%= link_to("자세히 보기", item, class: "btn btn-primary") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>
